{
  "analysis": {
    "analyzer": {
      "trigrams": {
        "tokenizer": "my_ngram_tokenizer",
        "filter" : [ "lowercase", "trigrams_filter" ]
      }
    },
    "filter" : {
      "trigrams_filter" : {
        "type" : "ngram",
        "min_gram" : 3,
        "max_gram" : 3
      }
    },
    "tokenizer": {
      "my_ngram_tokenizer": {
        "type": "nGram",
        "min_gram": "3",
        "max_gram": "3",
        "token_chars": [
          "letter",
          "digit",
          "symbol",
          "punctuation"
        ]
      }
    }
  }
}