{
  "analysis": {
    "filter": {
      "content_filter": {
        "type": "shingle",
        "min_shingle_size": 2,
        "max_shingle_size": 2,
        "output_unigrams": false
      }
    },
    "tokenizer": {
      "content_tokenizer": {
        "type": "nGram",
        "min_gram": "2",
        "max_gram": "2",
        "token_chars": [
          "letter",
          "digit"
        ]
      }
    },
    "analyzer": {
      "suggest": {
        "type": "custom",
        "tokenizer": "content_tokenizer",
        "char_filter": [
          "html_strip"
        ],
        "filter": [
          "lowercase"
          ]
      }
    }
  }
}