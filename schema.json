Blog: [ {
		"title": {
			"propertyTypes": ["html"]
			}
		}, {
		"content": {
			// Does the html field need a key?
			// How many of the allowed property types can be inserted in the content? is it unlimited? Do we need min/max?
			// Should the order of field be fixed? or even modifiable
			"propertyTypes": ["html", "vcard", "preview", "gallery"]
			}
		}, {
		"footer": {
			"propertyTypes": [],
			// How do we deal with a regex whitelist?
			"whitelist": "blogpost\\..*"
			}
		}, {
		"preview": {
			// This does not work since the whitelist is missing and the min, max
			// We could move the parameters for this part/property type inside a microschema or custom property type (e.g: single-image)
			"propertyTypes": ["nodes"]
			}
		} 
	]


Blog: [ {
		"name": "content",
		"type": "list",
		"propertyTypes": [ {
			"name": "teaser",
			"type": "html"
		}, {
			// The user can add any content here
			"name": "dynamicContent",
			"type": "list",
			// This schema allows the user to add any property type (microschema) within the blogpost at this place.
			// Access /api/v1/propertyTypes to list all the property types
			"propertyTypes": [],
			"min": 2,
			"max": 3,
		}, {
			"name": "preview",
			"type": "nodes",
			"min": 1,
			"max": 1,
			"schemaWhitelist": ["image"]
		}, {
			"name": "gallery",
			"type": "microschema",
			"parts": [ {
					"name": "description",
					"type": "html" 
				}, {
					"name": "preview",
					"type": "nodes",
					// Fixed list of one element
					"min": 1,
					"max": 1,
					"schemaWhitelist": ["image"]
				}, {
					"name": "images",
					"type": "nodes",
					// Default values for nodes
					"nodes": [ 
						{ "path": "/news/2015/awesome.jpg"}
						{ "uuid": "12345"}, 
						{ "uuid": "abcd"}
					],
					// Dynamic list -  The user must add additional 3 images.
					"min": 5,
					"max": 10,
					"schemaWhitelist": ["image"]
				}
			]
		} ],
	}, {
		// The footer can contain any of the whitelisted parts
		"name": "footer",
		"type": "list",
		// simplified view below (see above for full example)
		"propertyTypes": ["html", "videoplayer", "vcard", "tagcloud"]
	}, {
		"name": "date",
		"type": "date"
	}, {
		"name": "teaser",
		"type": "html"
	}, {
		"name": "preview",
		"type": "nodes",
		"min": 1,
		"max": 1,
		"schemaWhitelist": ["image"]
	}
]

